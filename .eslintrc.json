{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "rules": {
        "no-console": 1,
        "max-len": [1, 120, 2, { "ignoreComments": true }]
    }
}
